-include $(TOPDIR)/.config
-include $(TOPDIR)/Make.defs

ASRCS		=
CSRCS		=

CSRCS += netlib.c
CSRCS += netlib_parsehttpurl.c
CSRCS += netlib_setifstatus.c \
	netlib_getifstatus.c
CSRCS += netlib_getifaddrs.c
CSRCS += netlib_getstats.c
CSRCS += netlib_netlog.c

ifeq ($(CONFIG_NET_NETMON),y)
CSRCS += netlib_netmon.c
endif

ifeq ($(CONFIG_NET_IPv4),y)
CSRCS += netlib_setipv4addr.c \
	netlib_getipv4addr.c \
	netlib_getdripv4addr.c \
	netlib_setdripv4addr.c \
	netlib_setipv4netmask.c
endif

ifeq ($(CONFIG_NET_IPv6),y)
CSRCS += netlib_setipv6addr.c \
	netlib_prefix2ipv6netmask.c \
	netlib_ipv6netmask2prefix.c \
	netlib_setipv6type.c
endif

# No MAC address support for SLIP (Ethernet only)

ifeq ($(CONFIG_NET_ETHERNET),y)
CSRCS += netlib_setmacaddr.c \
	netlib_getmacaddr.c
endif

# IGMP support

ifeq ($(CONFIG_NET_IGMP),y)
ifeq ($(CONFIG_NET_IPv4),y) # Not yet available for IPv6
CSRCS += netlib_ipmsfilter.c
endif
endif
CSRCS += netlib_setdnsserver.c

AOBJS		= $(ASRCS:.S=$(OBJEXT))
COBJS		= $(CSRCS:.c=$(OBJEXT))

SRCS		= $(ASRCS) $(CSRCS)
OBJS		= $(AOBJS) $(COBJS)

ifeq ($(CONFIG_WINDOWS_NATIVE),y)
  BIN		= ..\libexternal$(LIBEXT)
else
ifeq ($(WINTOOL),y)
  BIN		= ..\\libexternal$(LIBEXT)
else
  BIN		= ../libexternal$(LIBEXT)
endif
endif

DEPPATH	= --dep-path .

# Common build

VPATH		=

all: .built
.PHONY: depend clean distclean

$(AOBJS): %$(OBJEXT): %.S
	$(call ASSEMBLE, $<, $@)

$(COBJS): %$(OBJEXT): %.c
	$(call COMPILE, $<, $@)

.built: $(OBJS)
	$(call ARCHIVE, $(BIN), $(OBJS))
	$(Q) touch .built

.depend: Makefile $(SRCS)
	$(Q) $(MKDEP) $(DEPPATH) "$(CC)" -- $(CFLAGS) -- $(SRCS) >Make.dep
	$(Q) touch $@

depend: .depend

clean:
	$(call DELFILE, .built)
	$(call CLEAN)

distclean: clean
	$(call DELFILE, Make.dep)
	$(call DELFILE, .depend)

-include Make.dep
