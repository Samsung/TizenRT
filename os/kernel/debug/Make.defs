ifeq ($(CONFIG_CPP_HAVE_VARARGS),n)
ifeq ($(CONFIG_SECURE_DEBUG_ASSERT),y)
CSRCS += debug.c
endif
endif

ifeq ($(CONFIG_DEBUG_SYSTEM),y)
CSRCS += sysdbg.c
endif

ifeq ($(CONFIG_MEM_LEAK_CHECKER),y)
CSRCS += mem_leak_checker.c
endif

CSRCS += dbg_termination_info.c
ifeq ($(CONFIG_DEBUG_MM_WARN),y)
CSRCS += memdbg.c
endif

ifeq ($(CONFIG_ENABLE_STACKMONITOR)$(CONFIG_DEBUG),yy)
CSRCS += stackinfo_save_terminated.c
endif

DEPPATH += --dep-path debug
VPATH += :debug
