		depends on WIFI6_CODE_STACK
		bool "Enable minimum scan results"
		default n

	config CUSTOM_MAX_SCAN_RST_NUM
		depends on WIFI6_CODE_STACK
		int "Maximum number of scan results"
		range 1 255
		default 120
		help
			Configure the maximum number of WiFi scan results that can be stored.
			Increasing this value allows more scan results to be retained, but
			consumes more memory. Valid range is 1-255.

	config BK_MEM_DYNA_APPLY_EN
