ifeq ($(CONFIG_SCSC_WLAN),y)

#Driver API
CSRCS += slsi_wifi_api.c

#Upper driver
CSRCS += \
	dev.c \
	netif.c \
	rx.c \
	ba.c \
	max_buf.c \
	tx.c \
	scsc_wifi_fcq.c

#SAPs
CSRCS += \
	sap_mlme.c \
	sap_ma.c \
	sap_dbg.c \
	sap_test.c

#Commom driver files
CSRCS += \
	mib.c \
	mib_text_convert.c \
	mlme.c \
	mgt.c \
	wlan_80211_utils.c \
	log_clients.c \
	udi.c \
	fw_test.c

#Build for h/w
CSRCS += hip.c \
	cm_if.c \
	hip4.c \
	mbulk.c

#T20 ops
CSRCS += \
	t20_ops.c

# TinyARA Wrappers
CSRCS += \
	tinyara_wrapper.c

CSRCS += slsi_drv_netmgr.c

# Include wireless devices build support

DEPPATH += --dep-path wireless$(DELIM)scsc
VPATH += :wireless$(DELIM)scsc
CFLAGS += ${shell $(INCDIR) $(INCDIROPT) "$(CC)" $(TOPDIR)$(DELIM)..$(DELIM)external$(DELIM)wpa_supplicant$(DELIM)src}
CFLAGS += ${shell $(INCDIR) $(INCDIROPT) "$(CC)" $(TOPDIR)$(DELIM)drivers$(DELIM)wireless$(DELIM)scsc}

ifeq ($(CONFIG_SCSC_CORE),y)
include wireless$(DELIM)scsc$(DELIM)misc$(DELIM)Make.defs
endif

endif
