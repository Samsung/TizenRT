# Include nothing if CONFIG_SENSOR is disabled
ifeq ($(CONFIG_SENSOR),y)

CSRCS += sensor.c

ifeq ($(CONFIG_SENSOR_MLX90617),y)
CSRCS += mlx90617.c
endif

ifeq ($(CONFIG_SENSOR_AIS25BA),y)
CSRCS += ais25ba.c
endif

ifeq ($(CONFIG_SENSOR_PPD42NS),y)
  CSRCS += ppd42ns.c
endif

# Include sensor build support

DEPPATH += --dep-path sensors
VPATH += :sensors

endif

