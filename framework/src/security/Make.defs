SECLINK_DIR = $(TOPDIR)/../framework/src/security
include $(SECLINK_DIR)/seclink/Make.defs

ifeq ($(CONFIG_SECURITY_API), y)
CSRCS += security_common.c security_utils.c

ifeq ($(CONFIG_SECURITY_AUTH), y)
CSRCS += security_auth.c
endif
ifeq ($(CONFIG_SECURITY_CRYPTO), y)
CSRCS += security_crypto.c
endif
ifeq ($(CONFIG_SECURITY_KEYMGR), y)
CSRCS += security_keymgr.c
endif
ifeq ($(CONFIG_SECURITY_SS), y)
CSRCS += security_ss.c
endif

DEPPATH += --dep-path src/security
VPATH += :src/security

endif

